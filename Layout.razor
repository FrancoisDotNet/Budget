@inherits LayoutComponentBase

<nav class="bg-secondary navbar btn-group">
    @foreach (var link in links)
    {
        <NavLink class="btn btn-outline-dark" href="@(link ==  "home" ? "" : link)"
                 Match="NavLinkMatch.All">
            <span class="oi oi-@link"/>
        </NavLink>
    }
</nav>
<article>@Body</article>

@code   { List<string> links = new List<string> { "home", "caret-bottom", "caret-top" }; }