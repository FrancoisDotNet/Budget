<tbody>
    <tr class="@Index.Hidden[1] btn-primary active" style="font-weight: bold">
        <td class="text-left">Total</td>
        <td>@(Index.Transactions.Where(t => t.IsIncome).Sum(t => t.LastMonth) - Index.Transactions.Where(t => t.IsIncome == false).Sum(t => t.LastMonth) + " €")</td>
        <td>@(Index.Transactions.Where(t => t.IsIncome).Sum(t => t.ThisMonth) - Index.Transactions.Where(t => t.IsIncome == false).Sum(t => t.ThisMonth) + " €")</td>
        <td></td>
    </tr>
    <tr class="@Index.Hidden[1] btn-success active" style="font-weight: bold">
        <td class="text-left">Income</td>
        <td>@(Index.Transactions.Where(t => t.IsIncome).Sum(e => e.LastMonth) + " €")</td>
        <td>@(Index.Transactions.Where(t => t.IsIncome).Sum(e => e.ThisMonth) + " €")</td>
        <td></td>
    </tr>
    @foreach (var category in Income)
    {
        <tr class="@Index.Hidden[1] btn-success " style="font-weight: bold">
            <td class="text-left">@category.Key</td>
            <td>@(category.Sum(e => e.LastMonth) + " €")</td>
            <td>@(category.Sum(e => e.ThisMonth) + " €")</td>
            <td></td>
        </tr>
        @foreach (var transaction in category)
        {
            <CascadingValue Value="this"><TR Transaction="transaction" /></CascadingValue>
        }
    }
    <tr class="@Index.Hidden[1] btn-danger active" style="font-weight: bold">
        <td class="text-left">Expenses</td>
        <td>@(Index.Transactions.Where(t => t.IsIncome == false).Sum(e => e.LastMonth) + " €")</td>
        <td>@(Index.Transactions.Where(t => t.IsIncome == false).Sum(e => e.ThisMonth) + " €")</td>
        <td></td>
    </tr>
    @foreach (var category in Expense)
    {
        <tr class="@Index.Hidden[1] btn-danger" style="font-weight: bold">
            <td class="text-left">@category.Key</td>
            <td>@(category.Sum(e => e.LastMonth) + " €")</td>
            <td >@(category.Sum(e => e.ThisMonth) + " €")</td>
            <td></td>
        </tr>
        @foreach (var transaction in category)
        {
            <CascadingValue Value="this"><TR Transaction="transaction" /></CascadingValue>
        }
    }
</tbody>

@code {
    [CascadingParameter] Index Index { get; set; }

    public IEnumerable<IGrouping<string, Transaction>> Income { get; set; }
    public IEnumerable<IGrouping<string, Transaction>> Expense { get; set; }
    
    protected override void OnParametersSet()
    {
        Income = Index.Transactions.Where(t => t.IsIncome).OrderBy(t => t.Category).ThenBy(t => t.Title).GroupBy(t => t.Category);
        Expense = Index.Transactions.Where(t => t.IsIncome == false).OrderBy(t => t.Category).ThenBy(t => t.Title).GroupBy(t => t.Category);
    }
}